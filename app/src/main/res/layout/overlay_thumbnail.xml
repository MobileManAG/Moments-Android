<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/thumbnailWidth_fixed"
    android:layout_height="@dimen/thumbnailHeight_fixed"
    android:id="@+id/overlayThumbnailLayout"
    >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/overlayThumbnailBackgroundImageView"
        android:scaleType="centerCrop"
        android:layout_gravity="center" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fixed_20"
        android:layout_marginTop="@dimen/activity_vertical_margin_fixed"
        android:id="@+id/imageView"
        android:src="@drawable/moments_text"
        android:layout_gravity="center_horizontal|top" />

    <TextView
        android:textSize="@dimen/fixed_24"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="130px"
        android:text="@string/live"
        android:background="@color/buttonRedTransparent84"
        android:paddingLeft="@dimen/activity_horizontal_margin_fixed"
        android:paddingRight="@dimen/activity_horizontal_margin_fixed"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal" />



</FrameLayout>