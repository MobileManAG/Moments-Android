<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/myMomentsImageView"
        android:layout_gravity="center"
        />
    <com.mobileman.moments.android.frontend.custom.ButtonCustomFont
        style="@style/Moments.Semibold20"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/buttonRowHeight"
        android:text="Stream title"
        android:background="@color/yellowTransparent84"
        android:textColor="@android:color/black"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        android:id="@+id/myMomentsTitleTextView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|bottom" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play_round"
        android:background="@android:color/transparent"
        android:id="@+id/myMomentsPlayImageButton"
        android:minHeight="100dp"
        android:layout_gravity="center" />

    <com.mobileman.moments.android.frontend.custom.TextViewCustomFont
        style="@style/Moments.Semibold20"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myMomentsMenuTextView"
        android:text="•••"
        android:gravity="center_vertical|right"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_gravity="right|top"
        />
    <com.mobileman.moments.android.frontend.custom.TextViewCustomFont
        style="@style/Moments.Semibold16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_btn_bg"
        android:id="@+id/myMomentsDeleteTextView"
        android:text="Delete"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_gravity="right|top"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textColor="@color/black87" />
</FrameLayout>